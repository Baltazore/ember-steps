{{#step-manager as |w|}}
  {{#w.step name='a'}}
    <h3>Step A</h3>

    <button {{action w.transition-to 'b'}}>
      Go to Step B
    </button>

    <button {{action w.transition-to 'c'}}>
      Go to Step C
    </button>
  {{/w.step}}

  {{#w.step name='b'}}
    <h3>Step B</h3>

    <button {{action w.transition-to 'a'}}>
      Go to Step A
    </button>

    <button {{action w.transition-to 'c'}}>
      Go to Step C
    </button>
  {{/w.step}}

  {{#w.step name='c'}}
    <h3>Step C</h3>

    <button {{action w.transition-to 'a'}}>
      Go to Step A
    </button>

    <button {{action w.transition-to 'b'}}>
      Go to Step B
    </button>
  {{/w.step}}
{{/step-manager}}
