<DocsDemo as |demo|>
  <demo.example @name="validating-steps-did-transition.hbs">
    <StepManager as |w|>
      <w.step>
        <input placeholder="Enter password" value={{this.password}}>

        <ControlGroup>
          <button
            type="button"
            onclick={{validate-transition w.transition-to-next with=this.checkPassword}}
          >
            Check Password
          </button>
        </ControlGroup>
      </w.step>

      <w.step>
        Great job! You got the password right

        <ControlGroup>
          <button
            type="button"
            {{on "click" (pipe w.transition-to-previous this.reset)}}
          >
            Reset
          </button>
        </ControlGroup>
      </w.step>
    </StepManager>
  </demo.example>

  <demo.snippet @name="validating-steps-did-transition.hbs" />
  <demo.snippet @name="validating-steps-did-transition.js" @label="component.js" />
</DocsDemo>
