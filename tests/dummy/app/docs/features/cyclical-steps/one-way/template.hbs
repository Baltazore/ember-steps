{{#docs-demo as |demo|}}
  {{#demo.example name='demo-cyclical-steps-one-way.hbs'}}
    {{#step-manager as |w|}}
      {{#w.step}}
        First step
      {{/w.step}}

      {{#w.step}}
        Second step
      {{/w.step}}

      {{#w.step}}
        Third Step
      {{/w.step}}

      {{#control-group}}
        <button
          onClick={{action w.transition-to-previous}}
          disabled={{not w.hasPreviousStep}}
        >
          Previous
        </button>
        <button
          onClick={{action w.transition-to-next}}
          disabled={{not w.hasNextStep}}
        >
          Next
        </button>
      {{/control-group}}
    {{/step-manager}}
  {{/demo.example}}

  {{demo.snippet 'demo-cyclical-steps-one-way.hbs'}}
{{/docs-demo}}

