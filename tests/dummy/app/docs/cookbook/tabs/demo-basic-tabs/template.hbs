<DocsDemo as |demo|>
  <demo.example @name="cookbook-tabs.hbs">
    <StepManager as |w|>
      <TabGroup>
        <TabButton
          @isActive={{eq w.currentStep "first"}}
          {{on "click" (fn w.transition-to "first")}}
        >
          First Tab
        </TabButton>
        <TabButton
          @isActive={{eq w.currentStep "second"}}
          {{on "click" (fn w.transition-to "second")}}
        >
          Second Tab
        </TabButton>
      </TabGroup>

      <w.step @name="first">
        This content is on the first tab
      </w.step>

      <w.step @name="second">
        This content is on the second tab
      </w.step>
    </StepManager>
  </demo.example>

  <demo.snippet @name="cookbook-tabs.hbs" />
</DocsDemo>
